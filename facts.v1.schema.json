{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/facts.v1.schema.json",
  "title": "Infrastructure Facts Schema v1 (Search Contract)",
  "description": "Normalized, search-friendly contract describing the usable interface of a Bicep template.",
  "type": "object",
  "required": [
    "schemaVersion",
    "componentId",
    "source_path",
    "source_hash",
    "scopes_allowed",
    "scopes_default",
    "parametersJson",
    "outputsJson",
    "capabilities_category",
    "meta_generatedAt",
    "meta_generator"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "const": "facts.v1"
    },
    "componentId": {
      "type": "string",
      "description": "Stable identifier of the infrastructure component (e.g. vnet, vm, aks)."
    },
    "source_path": {
      "type": "string",
      "description": "Path or identifier of the original Bicep file."
    },
    "source_hash": {
      "type": "string",
      "description": "Content hash of the Bicep source for traceability."
    },
    "source_compilerVersion": {
      "type": "string",
      "description": "Version of the Bicep CLI / Language Server used."
    },
    "scopes_allowed": {
      "type": "array",
      "items": {
        "enum": [
          "resourceGroup",
          "subscription",
          "managementGroup",
          "tenant"
        ]
      }
    },
    "scopes_default": {
      "enum": [
        "resourceGroup",
        "subscription",
        "managementGroup",
        "tenant"
      ]
    },
    "scopes_notes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "parametersJson": {
      "type": "array",
      "description": "Public input contract of the template.",
      "items": {
        "type": "object",
        "required": [
          "name",
          "type",
          "required"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "enum": [
              "string",
              "int",
              "bool",
              "array",
              "object"
            ]
          },
          "required": {
            "type": "boolean"
          },
          "defaultKind": {
            "enum": [
              "none",
              "literal",
              "expression"
            ]
          },
          "default": {},
          "defaultExpression": {
            "type": "string"
          },
          "constraints": {
            "type": "object",
            "properties": {
              "allowed": {
                "type": "array",
                "items": {}
              },
              "minValue": {
                "type": "number"
              },
              "maxValue": {
                "type": "number"
              },
              "minLength": {
                "type": "integer"
              },
              "maxLength": {
                "type": "integer"
              },
              "pattern": {
                "type": "string"
              }
            },
            "additionalProperties": false
          },
          "description": {
            "type": "string"
          },
          "sensitive": {
            "type": "boolean"
          }
        }
      }
    },
    "outputsJson": {
      "type": "array",
      "description": "Public outputs exposed by the template.",
      "items": {
        "type": "object",
        "required": [
          "name",
          "type"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "enum": [
              "string",
              "int",
              "bool",
              "array",
              "object"
            ]
          },
          "itemType": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "modulesJson": {
      "type": "array",
      "description": "High-level module dependencies (interface-level only).",
      "items": {
        "type": "object",
        "required": [
          "name",
          "path"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "scope": {
            "enum": [
              "resourceGroup",
              "subscription",
              "managementGroup",
              "tenant"
            ]
          },
          "conditionKind": {
            "enum": [
              "always",
              "conditional",
              "foreach"
            ]
          },
          "conditionDependsOn": {
            "type": "string"
          }
        }
      }
    },
    "capabilities_category": {
      "type": "string",
      "description": "High-level classification (networking, compute, data, security, etc.)"
    },
    "capabilities_features": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "meta_generatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "meta_generator": {
      "type": "string",
      "description": "Tool that generated the facts file."
    },
    "meta_notes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "content": {
      "type": "string",
      "description": "Optional full-text field to support search queries."
    }
  },
  "additionalProperties": false
}
